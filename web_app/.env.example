# LLM Backend Selection
# Options: demo, ollama, openai, anthropic, huggingface
LLM_BACKEND=anthropic

# For Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# For Text-to-Speech (Voice) - Using Murf API
TTS_ENABLED=true
MURF_API_KEY=your_murf_api_key_here
MURF_VOICE_ID=Ryan
MURF_STYLE=Conversational
MURF_MODEL=Falcon

# For HuggingFace Inference API (optional)
# HUGGINGFACE_API_KEY=your_huggingface_key_here

# For Ollama (local LLM) - Install from https://ollama.ai
# OLLAMA_MODEL=llama2

# For OpenAI API (optional)
# OPENAI_API_KEY=your_openai_key_here
# OPENAI_MODEL=gpt-3.5-turbo
